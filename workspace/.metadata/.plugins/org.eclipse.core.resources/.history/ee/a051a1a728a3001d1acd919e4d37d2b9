package aula1;

public class TiposPrimitivos {
	public static void main(String[] args) {
		System.out.println("Tipos de dados em Java: \n" + 
				"\nChar tem o tamanho de " + Character.BYTES + " bytes." + 
				"\n\nByte tem o tamanho de : " + Byte.BYTES + " byte." +
				"\nO menor byte é o valor: " + Byte.MIN_VALUE + 
				"\nO maior byte é o valor: " + Byte.MAX_VALUE +
				"\n\nShort tem o tamanho de: " + Short.BYTES + " bytes." +
				"\nO menor short é o valor: " + Short.MIN_VALUE + 
				"\nO maior short é o valor: " + Short.MAX_VALUE +
				"\n\nInt tem o tamanho de: " + Integer.BYTES + " bytes." +
				"\nO menor int é o valor: " + Integer.MIN_VALUE + 
				"\nO maior int: " + Integer.MAX_VALUE +
				"\n\nLong tem o tamanho de: " + Long.BYTES + " bytes." +
				"\nO menor long é o valor: " + Long.MIN_VALUE +
				"\nO maior long:" + Long.MAX_VALUE + 
				"\n\nFloat tem tamanho de: " + Float.BYTES + " bytes." +
				"\nO menor float é o valor: " + Float.MIN_VALUE + 
				"\nO maior float é o valor: " + Float.MAX_VALUE +
				"\n\nDouble tem o tamanho de: " + Double.BYTES + " bytes." +
				"\nO menor Double é o valor: " + Double.MIN_VALUE + 
				"\nO maior Double é o valor: " + Double.MAX_VALUE);

	}

}
